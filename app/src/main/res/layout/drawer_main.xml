<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/loginBkColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/accountImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:src="@drawable/boy"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_margin="6dp"
                android:id="@+id/accountUserName"
                android:textColor="@color/textcolor"
                android:text="Shivam"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp">

            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/viewline"/>
            <RelativeLayout
                android:id="@+id/accountStatement_Layout"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_alignParentStart="true"
                    android:text="Account Statement"
                    android:textColor="@color/textcolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:drawableLeft="@drawable/ic_navigate_next_24"
                    app:drawableStartCompat="@drawable/ic_navigate_next_24" />



            </RelativeLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/viewline"/>
            <RelativeLayout
                android:id="@+id/bethistory_layout"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_alignParentStart="true"
                    android:text="Bet History"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    app:drawableStartCompat="@drawable/ic_navigate_next_24" />



            </RelativeLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/viewline"/>
            <RelativeLayout
                android:id="@+id/unsetteledbet_layout"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_alignParentStart="true"
                    android:text="Unsetteled Bet"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:drawableStart="@drawable/ic_navigate_next_24"
                    android:layout_marginRight="12dp" />



            </RelativeLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/viewline"/>

            <RelativeLayout
                android:id="@+id/changeP_layout"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_alignParentStart="true"
                    android:text="Change Password"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:drawableStart="@drawable/ic_navigate_next_24"
                    android:layout_marginRight="12dp" />



            </RelativeLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/viewline"/>
            <RelativeLayout
                android:id="@+id/rules_layout"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_alignParentStart="true"
                    android:text="Rules"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="12dp"
                    android:drawableStart="@drawable/ic_navigate_next_24" />



            </RelativeLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/viewline"/>

            <RelativeLayout
                android:id="@+id/logout_layout"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/danger"
                    android:layout_alignParentStart="true"
                    android:text="Logout"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:drawableStart="@drawable/ic_navigate_next_24"
                    app:drawableStartCompat="@drawable/ic_navigate_next_24" />



            </RelativeLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/viewline"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>