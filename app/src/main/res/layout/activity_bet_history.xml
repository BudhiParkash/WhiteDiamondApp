<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SideDrawerActivity.BetHistoryActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/bckbetHistory"
            app:drawableStartCompat="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bet History"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="18sp"/>
    </RelativeLayout>

    <TableLayout
        android:id="@+id/table_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                style="@style/table_header"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_weight="1.4"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Date"/>

            <TextView
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1.2"
                android:text="Bet Name"
                style="@style/table_header"

                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>

            <TextView
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_weight="0.7"
                android:text="Bet Number"
                style="@style/table_header"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>

            <TextView
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_column="3"
                android:layout_weight="0.7"
                android:text="Point"
                style="@style/table_header"

                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/betHistoryRecycle"
        />

</LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/bethistoryProgressbar"
        android:layout_width="wrap_content"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>